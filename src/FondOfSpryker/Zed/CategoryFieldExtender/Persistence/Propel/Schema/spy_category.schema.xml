        namespace="Orm\Zed\Category\Persistence"
        package="src.Orm.Zed.Category.Persistence">

    <table name="spy_category" idMethod="native" phpName="SpyCategory">
        <column name="content_type" required="false" type="VARCHAR" size="255"/>
        <column name="contentful_hero" required="false" type="VARCHAR" size="255"/>
        <column name="contentful_filter" required="false" type="VARCHAR" size="255"/>
